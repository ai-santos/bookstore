extends ../layout

block content
  h1.page-header Books
  for book in books
    .row.jumbotron
      h2.text-center
        a(href="/books/"+book.id)= book.title
      .col-md-2
        img.media-object.thumbnail(src= book.image_url, alt='...')
        for author in book.authors
          div By:
            a(href="/authors/"+author.id)=author.name
        for genre in book.genres
          div Genre:
            a(href="/genres/"+genre.id)=genre.name
      .col-md-10
        blockquote=book.description


  if page > 1
    a(href="/?page="+(page-1)) Prev
  a(href="/?page="+(page+1)) Next

